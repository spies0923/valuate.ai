# Valuate.ai Environment Variables
# Copy this file to .env and fill in your values

# ============================================
# MongoDB Configuration
# ============================================
MONGO_ROOT_USERNAME=admin
MONGO_ROOT_PASSWORD=changeme_use_strong_password
MONGO_PORT=27017

# ============================================
# OpenAI Configuration
# ============================================
# Required: Get your API key from https://platform.openai.com/api-keys
OPENAI_API_KEY=sk-your-openai-api-key-here

# ============================================
# Server Configuration
# ============================================
SERVER_PORT=8080
# Required: Generate a secure random string for JWT signing
# Example: openssl rand -base64 32
JWT_SECRET=your-jwt-secret-key-change-in-production
LOG_LEVEL=info

# ============================================
# Client Configuration
# ============================================
CLIENT_PORT=3000
NEXT_PUBLIC_SERVER_URL=http://localhost:8080

# ============================================
# UploadThing Configuration
# ============================================
# Get your keys from https://uploadthing.com/dashboard
UPLOADTHING_SECRET=sk_live_your_uploadthing_secret
UPLOADTHING_APP_ID=your_uploadthing_app_id
